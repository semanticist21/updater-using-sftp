<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="600">
    <Window.Resources>
    </Window.Resources>
    <Grid Style="{StaticResource BackgroundGridStyle}" SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Style="{StaticResource MainStackPanelStyle}">
            <ProgressBar MinHeight="30" Margin="0 0 0 10 " Value="50" BorderThickness="0"/>
            <Border Style="{StaticResource ListBoxBorderStyle}">
                <ListBox Style="{StaticResource ListBoxStyle}"/>
            </Border>
            <Border Style="{StaticResource TextBorderStyle}">
                <TextBlock Style="{StaticResource TextBoxStyle}"/>
            </Border>
        </StackPanel>
        <Border Grid.Column="1" Style="{StaticResource ButtonBoxBorderStyle}">
            <StackPanel VerticalAlignment="Center">
                <ComboBox Margin="7 3 7 3" BorderBrush="Gray"/>
                <Button Height="30" Margin="5" Style="{StaticResource DefaultButtonStyle}" Content="Connect"/>
                <Button Height="30" Margin="5" Style="{StaticResource DefaultButtonStyle}" Content="Update Run"/>
                <Button Height="30" Margin="5" Style="{StaticResource DefaultButtonStyle}" Content="Run Project"/>
                <Button Height="30" Margin="5" Style="{StaticResource DefaultButtonStyle}" Content="Set Directory"/>
                <Button Height="30" Margin="5" Style="{StaticResource DefaultButtonStyle}" Content="Options"/>
                <Button Height="30" Margin="5" Style="{StaticResource DefaultButtonStyle}" Content="Exit"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
